                                    <Binding Path="{Binding  SelectedFriend.Last}" ></Binding>--><!--


                                </MultiBinding>
                                
                            </Label.Content>-->
                            
                        </Label>
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right">
                            <fa:ImageAwesome Icon="VideoCamera" Height="35"
                                         Margin="0,0,10,0"/>
                            <fa:ImageAwesome Icon="Phone" Height="35"
                                         Margin="0,0,10,0"/>


                        </StackPanel>

                    </Grid>
                </Border>
                <ListView Background="Transparent"
                          Grid.Row="1"
                          Margin="10,0,10,0"
                          ItemsSource="{Binding ChatWithUser}"
                          ItemContainerStyle="{StaticResource ChatStyle}"
                          
                                                  
                          
                          />
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="80"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             
                             Margin="10,0,0,0"
                             Style="{StaticResource CustomTextBox}"
                             >

                    </TextBox>
                    <Button Grid.Column="1" Width="45" Height="45" Margin="10">
                        <Button.Template>
                            <ControlTemplate>
                                <fa:ImageAwesome Icon="Send"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                
            </Grid>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition/>
                  
                </Grid.RowDefinitions>
                <UniformGrid Columns="2">
                    <Label Content="Friends"
                       VerticalAlignment="Center"
                       FontWeight="Black"
                       Margin="15,0,0,0"
                       />

                    <Button Width="70" Height="30" 
                            Background="Aqua"
                            FontSize="30"
                            Click="Button_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <fa:FontAwesome Icon="PlusSquare">
                                    
                                </fa:FontAwesome>
                            </ControlTemplate>
                            
                        </Button.Template>
                        
                    </Button>
                </UniformGrid>
              
                <ListView Grid.Row="1"
                          Background="Transparent"
                          ItemContainerStyle="{StaticResource FriendListStyle}"
                          ItemsSource="{Binding Friends}"
                            SelectedItem="{Binding SelectedFriend}"
                          >
                   
                </ListView>

            </Grid>
            
        </Grid>
    </DockPanel>
